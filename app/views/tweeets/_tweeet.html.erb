<div id="<%= dom_id tweeet %>" class='px-8 relative z-10'>
  <p>
    <div class='flex items-center gap-2'>
      <strong class="block text-gray-800 text-xl font-medium"><%= tweeet.user.name %></strong>
      <span class="text-gray-500">@<%= tweeet.user.username %></span>
    </div>
    <%= tweeet.body %>
  </p>

  <% if action_name != "show" %>
  <div id="user-controls" class="flex gap-8 mt-4">
    <%= link_to root_path do %>
      <%= image_tag 'comment.svg' %>
    <% end %>
  </div>
  <% end %>
</div>
